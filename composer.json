{
  "name": "drdplus/fight-calculator",
  "license": "MIT",
  "type": "project",
  "description": "Configurator of weapons for DrD+",
  "keywords": [
    "DrD",
    "DrD plus",
    "weapons",
    "fight",
    "calculator"
  ],
  "autoload": {
    "psr-4": {
      "DrdPlus\\FightCalculator\\": "FightCalculator"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Granam\\TestWithMockery\\": "vendor/granam/test-with-mockery",
      "DrdPlus\\FightCalculator\\": "tests/FightCalculator"
    }
  },
  "require": {
    "ext-json": "*",
    "php": ">=7.3",
    "drdplus/fight-properties": "^3.0",
    "drdplus/attack-skeleton": "^3.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.0",
    "mockery/mockery": "^1.2",
    "granam/exceptions-hierarchy": "^5.0",
    "roave/security-advisories": "dev-latest",
    "composer/composer": "^1.9|^2.0",
    "granam/test-with-mockery": "^2.0"
  },
  "scripts": {
    "pre-autoload-dump": [
      "rm -f tests/AttackSkeleton && ln -s ../../vendor/drdplus/attack-skeleton/DrdPlus/Tests/AttackSkeleton tests/"
    ]
  }
}
