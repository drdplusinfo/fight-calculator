{
  "name": "drdplus/fight-calculator",
  "license": "MIT",
  "type": "project",
  "description": "Configurator of weapons for DrD+",
  "keywords": [
    "DrD",
    "DrD plus",
    "weapons",
    "fight",
    "calculator"
  ],
  "autoload": {
    "psr-4": {
      "DrdPlus\\": "DrdPlus/"
    }
  },
  "require": {
    "ext-json": "*",
    "php": ">=7.1",
    "drdplus/fight-properties": "^2.0",
    "drdplus/attack-skeleton": "^2.1"
  },
  "require-dev": {
    "phpunit/phpunit": "^8.3",
    "mockery/mockery": "^1.2",
    "granam/exceptions-hierarchy": "^5.0",
    "roave/security-advisories": "dev-master",
    "composer/composer": "^1.9"
  },
  "scripts": {
    "pre-autoload-dump": [
      "rm -f DrdPlus/Tests/AttackSkeleton && ln -s ../../vendor/drdplus/attack-skeleton/DrdPlus/Tests/AttackSkeleton DrdPlus/Tests/"
    ]
  }
}
