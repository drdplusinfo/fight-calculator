{
  "name": "drd-plus/fight-calculator",
  "license": "MIT",
  "type": "project",
  "description": "Configurator of weapons for DrD+",
  "keywords": [
    "DrD",
    "DrD plus",
    "weapons",
    "fight",
    "calculator"
  ],
  "autoload": {
    "psr-4": {
      "DrdPlus\\": "DrdPlus/"
    }
  },
  "require": {
    "php": ">=7.1",
    "granam/strict-object": "dev-master",
    "drd-plus/tables": "dev-master",
    "drd-plus/fight-properties": "dev-master",
    "drd-plus/attack-skeleton": "dev-master"
  },
  "require-dev": {
    "roave/security-advisories": "dev-master",
    "phpunit/phpunit": "~6.0",
    "mockery/mockery": "~1.0",
    "granam/exceptions-hierarchy": "~4.0",
    "phpgt/dom": "^1.0"
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "scripts": {
    "pre-autoload-dump": [
      "rm -fr ./css/generic && ln -s ../vendor/drd-plus/calculator-skeleton/css/generic ./css/generic",
      "rm -fr ./css/attack && ln -s ../vendor/drd-plus/attack-skeleton/css/attack ./css/attack",
      "rm -fr ./js/generic && ln -s ../vendor/drd-plus/calculator-skeleton/js/generic ./js/generic",
      "rm -fr ./images/generic && ln -s ../vendor/drd-plus/calculator-skeleton/images/generic ./images/generic"
    ]
  }
}
