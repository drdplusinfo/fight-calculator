{
  "name": "drdplus/fight-calculator",
  "license": "MIT",
  "type": "project",
  "description": "Configurator of weapons for DrD+",
  "keywords": [
    "DrD",
    "DrD plus",
    "weapons",
    "fight",
    "calculator"
  ],
  "autoload": {
    "psr-4": {
      "DrdPlus\\": "DrdPlus/"
    }
  },
  "require": {
    "ext-json": "*",
    "php": ">=7.1",
    "drdplus/tables": "~2.0",
    "drdplus/fight-properties": "~2.0",
    "drdplus/attack-skeleton": "~2.0"
  },
  "require-dev": {
    "phpunit/phpunit": "~7.0",
    "mockery/mockery": "~1.0",
    "granam/exceptions-hierarchy": "~4.0",
    "phpgt/dom": "^1.0",
    "roave/security-advisories": "dev-master",
    "composer/composer": "^1.8"
  },
  "scripts": {
    "pre-autoload-dump": [
      "rm -f DrdPlus/Tests/AttackSkeleton && ln -s ../../vendor/drdplus/attack-skeleton/DrdPlus/Tests/AttackSkeleton DrdPlus/Tests/"
    ]
  }
}
