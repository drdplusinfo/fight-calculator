{
  "name": "drd-plus/fight",
  "license": "MIT",
  "type": "project",
  "description": "Configurator of weapons for DrD+",
  "keywords": [
    "DrD",
    "DrD plus",
    "weapons",
    "fight",
    "configurator"
  ],
  "autoload": {
    "psr-4": {
      "DrdPlus\\": "DrdPlus/"
    }
  },
  "require": {
    "php": ">=7.1",
    "roave/security-advisories": "dev-master",
    "granam/strict-object": "dev-master",
    "drd-plus/tables": "dev-master",
    "drd-plus/fight-properties": "dev-master",
    "drd-plus/configurator-skeleton": "dev-master"
  },
  "require-dev": {
    "phpunit/phpunit": "~6.0",
    "mockery/mockery": "~1.0",
    "granam/exceptions-hierarchy": "~4.0",
    "phpgt/dom": "^1.0"
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "scripts": {
    "pre-autoload-dump": [
      "rm -fr $PWD/css/generic && ln -s $PWD/vendor/drd-plus/configurator-skeleton/css/generic $PWD/css/generic",
      "rm -fr $PWD/js/generic && ln -s $PWD/vendor/drd-plus/configurator-skeleton/js/generic $PWD/js/generic",
      "rm -fr $PWD/images/generic && ln -s $PWD/vendor/drd-plus/configurator-skeleton/images/generic $PWD/images/generic"
    ]
  }
}
